<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.timmy.myapplication">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DifficultyMenu"
            android:label="DifficultyMenu"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ColorsGame"
            android:label="@string/title_activity_colors_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ReactionGame"
            android:label="@string/title_activity_reaction_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ShapesGame"
            android:label="@string/title_activity_shapes_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FlashGame"
            android:label="@string/title_activity_flash_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SpellingGame"
            android:label="@string/title_activity_spelling_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BrainyGameActivity"
            android:label="@string/title_activity_number_game"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MathematicGame" />
        <activity android:name=".ShowQuestionsLog" />
        <activity android:name=".ShowGamesLog" />
        <activity android:name=".BarChart" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>